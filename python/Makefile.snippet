PYTHON_VERSION = $(shell python -V 2>&1 | cut -f2 -d' ' | cut -f1-2 -d'.')

all: python/_stfl.so python/stfl.py python/stfl.pyc

install: install_python

python/_stfl.so python/stfl.py python/stfl.pyc: libstfl.a stfl.h python/stfl.i swig/*.i
	cd python && swig -python stfl.i
	gcc -shared -fPIC python/stfl_wrap.c -I/usr/include/python$(PYTHON_VERSION) \
		-I. -L. -lstfl -lncursesw -o python/_stfl.so
	cd python && python -c 'import stfl'

install_python: python/_stfl.so python/stfl.py python/stfl.pyc
	mkdir -p $(DESTDIR)/usr/lib/python$(PYTHON_VERSION)/lib-dynload/
	cp python/_stfl.so $(DESTDIR)/usr/lib/python$(PYTHON_VERSION)/lib-dynload/
	cp python/stfl.pyc $(DESTDIR)/usr/lib/python$(PYTHON_VERSION)/
	cp python/stfl.py $(DESTDIR)/usr/lib/python$(PYTHON_VERSION)/

